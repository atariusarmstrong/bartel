

<h2>{{barpost.barName}}</h2>
<h2>{{barpost.location}}</h2>
<h4>Submitted by <a href="/user/{{barpost._id}}">{{barpost.author.0.username}}</a></h4>
<img src={{barpost.image}} alt="{{barpost.barName}}">
<p>{{barpost.description}}</p>

<a href="/{{barpost._id}}/edit">
    <button class="pure-button">Edit Bar</button>
</a>

<form action="/{{barpost._id}}?_method=DELETE" method="POST">
    <button class="pure-button" id="delete">Delete Bar</button>
</form>

