<p><a href="/{{barId}}">Go Back</a></p>

{{#each comments}}
<div>
    <h3>{{user}}</h3>
    <p>{{text}}</p>

    <form action="/{{../barId}}/comments/{{_id}}?_method=DELETE" method="POST">
        <button>delete</button>
    </form>
    
</div>
{{/each}}


<form class="pure-form pure-form-stacked"action="/{{barId}}/comments" method="POST">
    <input type="text" name="user" placeholder="Name/username">
    <textarea type="text" name="text" placeholder="Leave a comment..."></textarea>
    <button type="submit">Add comment</button>
</form>